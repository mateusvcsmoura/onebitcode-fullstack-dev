<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
</head>

<body>
    <h1>Newsletter Registered Users</h1>

    <ul>
        <% users.forEach(user=> { %>
            <li id="<%= user.id %>">
                <%= user.email %> - id: <%= user.id %>
            </li>
            <button data-id="<%= user.id %>" class="remove-btn">Remove</button>
            <% }) %>
    </ul>
    <script>
        document.querySelectorAll('.remove-btn').forEach(button => {
            button.addEventListener('click', async () => {
                const userId = button.getAttribute('data-id');
                const confirmDelete = window.confirm("Do you want to delete this user?");
                if (!confirmDelete) return;

                const res = await fetch(`/admin/${userId}`, {
                    method: "DELETE"
                });

                if (res.ok) {
                    document.getElementById(userId).remove();
                    button.remove();
                } else {
                    window.alert("Error trying to remove the user");
                }
            })
        })
    </script>
</body>

</html>